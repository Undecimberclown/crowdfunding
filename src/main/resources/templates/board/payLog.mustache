<div class="container vh-100 w-75">
    <div class="container mt-5">
        <table class="table table-hover" id="board-table">
            <tr>
                <th>번호</th>
                <th>아이템 명</th>
                <th>사용한 포인트</th>
                <th></th>
            </tr>
        </table>
    </div>
</div>
<script>
  $(document).ready(function(){
        $.ajax({
            url: '/user/logInChk',
            type: 'post',
            success: function(data, status, xhr){
                if(data.message == 'true'){
                    $('#logInBtn').text('로그아웃');
                    $('#logInBtn').attr('onclick', 'logOut()');
                    $('#chargeBtn').removeAttr('hidden');
                }
                else if(data.message == 'false'){
                    $('#logInBtn').text('로그인/회원가입');
                    $('#logInBtn').attr('onclick', 'moveToLogIn()');
                    $('#chargeBtn').attr('type', 'hidden');
                }

            }

        });
        $.ajax({
            url:"/payLog/userAll",
            type: "get",
            success: function(data, status, xhr){
            if(data.message == 'success'){
            let payLog = data.data

            for(let i = 0; i < payLog.length; i++){
            let string = "<tr onclick='location.href=''>";
            string += "<td>" + payLog[i].id + "</td>";
            string += "<td>" + payLog[i].title + "</td>";
            string += "<td>" + payLog[i].point + "</td>";
            string += "<td>" + new Date(payLog[i].entry_date).toLocalString() + "</td>";
            $('#payLog-table').append(string)
            }
        }

    }

  });

});


</script>
