<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="crowdfunding.PaymentMapper">
    <select id="selectOne" parameterType="int" resultType="int">
        SELECT `point` FROM `payment`
        WHERE `user_id` = #{user_id}
    </select>
    
    <insert id="insert" parameterType="paymentDTO">
        INSERT INTO `payment` (`user_id`, `commodity_id`, `point`)
        VALUES (#{user_id}, #{commodity_id}, #{point})
    </insert>
    
    <update id="fillPoint" parameterType="map">
        UPDATE `payment` SET
        `point` = `point` + #{sumPoint}
        WHERE `user_id` = #{user_id}
    </update>

    <update id="payPoint" parameterType="map">
        UPDATE `payment` SET
        `point` = `point - #{minusPoint}
        WHERE `user_id` = #{user_id}
    </update>
</mapper>